<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="#2b75ec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Management System"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:isScrollContainer="true">

            <LinearLayout
            android:background="#1fec7b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:text="NAME:"
                android:textColor="#000" />
            <EditText
                android:id="@+id/edit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:layout_weight="2"
                android:layout_marginRight="12dp"


                android:inputType="textPersonName"

                />
        </LinearLayout>

            <LinearLayout
                android:background="#04791f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:layout_marginLeft="12dp"/>
                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_weight="2"
                    android:hint="Enter Phone Number"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>

            <LinearLayout
            android:background="#417de4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="College:"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:id="@+id/edit3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_weight="2"
                android:hint="Enter college name"
                android:layout_marginRight="12dp"/>

        </LinearLayout>

            <LinearLayout
            android:background="#a14343"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:id="@+id/edit4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_weight="2"
                android:hint="Enter address"
                android:layout_marginRight="12dp"/>

        </LinearLayout>

            <Button
                android:padding="5dp"
                android:background="#aef512"
                android:id="@+id/btn1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="ADD STUDENT"
            android:textColor="#000"
            android:textSize="20sp"/>

            <Button
                android:padding="5dp"
                android:id="@+id/btn2"
                android:background="#da9696"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Result"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"/>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1">



    <TextView
        android:id="@+id/txt1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Records are :"
        android:textSize="20sp"
        android:textColor="#13259b"
        />
    </ScrollView>


</RelativeLayout>